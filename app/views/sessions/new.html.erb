<div class="max-w-md mx-auto mt-10 bg-white p-6 rounded-md shadow-md">
  <h1 class="text-2xl font-bold mb-4 text-center">Giriş Yap</h1>

   <% if flash[:message] %>
    <div class="bg-red-500 text-white p-4 rounded mb-4">
      <%= flash[:message] %>
    </div>
  <% end %>

  <%= form_with url: login_path, method: :post, class: "space-y-4" do %>
    <div>
      <%= label_tag :username, "Kullanıcı Adı", class: "block text-sm font-medium text-gray-700" %>
      
      <%= text_field_tag :username, nil, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
    </div>

    <div>
      <%= label_tag :password, "Şifre", class: "block text-sm font-medium text-gray-700" %>
      <%= password_field_tag :password, nil, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
    </div>

    <div>
      <%= label_tag :role, "Rol Seçin", class: "block text-sm font-medium text-gray-700" %>
      <%= select_tag :role, options_for_select([["Admin", "admin"], ["User", "user"]]), class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm " %>
    </div>

    <%= submit_tag "Giriş Yap", class: "w-full bg-red-500  text-white py-2 rounded-lg hover:bg-red-700" %>
  <% end %>
</div>
