<div class="container mx-auto p-6">
  <h1 class="text-3xl font-bold mb-4">Sepet</h1>

  <% @total_amount = 0 %>
  <div class="bg-white shadow overflow-hidden sm:rounded-lg">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Ürün Adı</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Adet</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Fiyat</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @cart.each do |product_id, quantity| %>
          <% product = Product.find(product_id) %>
          <tr>
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="text-sm font-medium text-gray-900"><%= product.name %></div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="text-sm text-gray-900"><%= quantity %> adet</div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="text-sm text-gray-900">₺<%= quantity * product.price %></div>
              <% @total_amount += quantity * product.price %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
              <%= button_to 'Sil', cart_destroy_path(product), method: :delete, class: "text-red-600 hover:text-red-900" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="mt-4">
    <p class="text-lg font-semibold">Toplam fiyat: ₺<%= @total_amount %></p>
  </div>

  <div class="mt-6">
    <%= link_to 'Anasayfa', home_path, class: "bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded" %>
  </div>
</div>
