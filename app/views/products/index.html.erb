<div class="container mx-auto p-10">
  <div class="text-3xl font-bold mb-10 text-center text-red-600">
    <h1>Tüm Ürünler</h1>
  </div>

  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">

    <% @products.each do |product| %>

      <div class="shadow rounded-lg p-6 bg-white">
        <h2 class="text-xl font-semibold mb-2"><%= product.name %></h2>
        <p class="text-gray-400 mb-4">Fiyat: <%= product.price %>₺</p>

        <div class="flex justify-between items-center">
          <%= link_to "Detayını Görüntüle", product_path(product) %>
    
          <% if current_user.role == "admin" %>
            <%= button_to "Ürünü Sil", product_path(product), method: :delete, data: { confirm: "Bu ürünü silmek istediğinizden emin misiniz?" }, class: "bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded ml-10" %>
          <% end %>
        </div>

      </div>
    <% end %>

  </div>

  <div class="text-center mt-10">
    <%= link_to 'Geri dön', home_path, class: "bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded" %>
  </div>
</div>
